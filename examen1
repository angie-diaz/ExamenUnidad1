def palindromo(a:String): Boolean = a match {
  case s
  if a.length > 1 => (a.head == a.last) && palindromo(a.slice(1, a.length-1))
  case x => true
}
println()
var pal1 = readLine
print("palabra")
palindromo(pal1)
println()
